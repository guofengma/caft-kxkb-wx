/* pages/servicelist/servicelist.wxss */
@import "./../style/aliicon.wxss" ;
.top{
  height: 280rpx;
  width: 100%;
  background: #fff;
}
.top image{
  width: 100%;
  height: 100%;
}

.filter-row{
  border-top: 1rpx solid #eee;
  height: 80rpx;
  background-color: #fff;
  box-shadow:0rpx 2rpx 2rpx rgba(0,0,0,0.3);
  padding: 0 30rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  display: flex ; 
  position:fixed ;
  top: 0;
  left: 0 ;
  right: 0;
  z-index: 9;
}
.filter-row .filter-item{
  box-sizing: border-box ;
  padding-left: 10rpx;
  padding-right: 30rpx;
  font-weight: bolder ;
  display:flex;
}
.filter-row .filter-item .iconfont{
  font-size: 20rpx;
  margin-left: 10rpx;
}

.filter-row .active{
  color: #E31212
}

.mode-demo{
  position: fixed ;
  top: 80rpx;
  bottom: 0 ;
  left: 0 ;
  right: 0 ;
  background: rgba(0,0,0,0.5);
  font-size: 30rpx;
  border-top:1rpx solid #eee;
  z-index: 9;

}
.mode-demo .mode-list{
  /* background: linear-gradient(to right,#fff,rgba(255, 255, 255, 0.9)) ; */
  background-color: #fefefe;
  padding: 20rpx 50rpx;
}
.mode-demo .mode-list .mode-list-item{
  padding: 20rpx 0;
  color: #555;
}
.mode-demo .mode-list .mode-list-item.active{
  color: #E31212
}

.content-list{
    box-sizing: border-box;
    padding: 16rpx 30rpx;
    margin-top:80rpx;
}
.content-list image{
  width: 100%;
  height: 100%;
}
.content-list > .item{
  background: #fff;
  margin-bottom: 15rpx;
  padding: 15rpx 25rpx 15rpx 20rpx;
  display: flex ;
  font-size: 20rpx;
  animation: list-item-in 800ms ;
  /* animation-delay:200ms ; */
  animation-fill-mode:forwards ; /**状态保持*/
  opacity: 0 ;
}

.content-list > .item .item-img{
  width: 180rpx;
  height: 160rpx;
  /* background: #eee; */
}
.content-list > .item .item-content{
  flex: 1 ;
  /* background: #ddd; */
  padding-left: 100rpx;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
}
.content-list > .item .item-content .item-content-name{
  font-size: 24rpx;
  font-weight: bolder ;
  margin-bottom: 10rpx;
}
.content-list > .item .item-content .price{
  color: #E31212 ;
  font-size: 26rpx;
}

.content-list > .item .item-buy{
  width: 70rpx;
  /* background: #ccc ; */
  display: flex ;
  align-items:flex-end;
}
.content-list > .item .item-buy .buyBut{
  width: 75rpx;
  height: 75rpx;
  background: #E60012;
  font-size: 18rpx;
  color: #fff;
  border-radius: 75rpx;
  display:flex;
  flex-direction:column;
  justify-content:center;
  text-align: center;
}
.noData{
  text-align: center ;
  font-size: 14rpx;
  color: #666 ;
}